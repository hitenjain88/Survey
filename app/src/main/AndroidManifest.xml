        <activity android:name=".Activity_Analytics_Show" />
        <activity android:name=".Analytics_Filled" />
        <activity android:name=".Analitics_List" />
        <activity android:name=".PreviewForm"
            android:label="Preview Form"
                  android:theme="@style/AppTheme2" />
        <activity android:name=".Ratings" />
        <activity android:name=".opinion" />
        <activity android:name=".feedback" />
        <activity android:name=".FormFill"
                  android:label="Filling Form"
                  android:theme="@style/AppTheme2" />
        <activity android:name=".ExistingForm"
            android:label="Editable File"
